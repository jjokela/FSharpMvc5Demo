@using TaxCalculator.WebApp.Models
@model TaxCalculatorRequest

<h2>Simple Tax Calculator with F#</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.GrossSalaryPerAnnum, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top: 10px">
                @Html.EditorFor(model => model.GrossSalaryPerAnnum)
                @Html.ValidationMessageFor(model => model.GrossSalaryPerAnnum)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calculate" class="btn btn-default" />
            </div>
        </div>
    </div>
}


